<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rbricks.appsharing.concept.animations.PropertyAnimationActivity">

    <TextView android:id="@+id/property_animation_tv"
        android:layout_below="@+id/property_playanimation_button"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Text"
        android:textColor="#000000"
        />

    <Button android:id="@+id/property_playanimation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="play animation1" />

    <Button android:id="@+id/property_playanimation_button2"
        android:layout_toRightOf="@+id/property_playanimation_button"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="play animation2" />

</RelativeLayout>
