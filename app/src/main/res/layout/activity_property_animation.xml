<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rbricks.appsharing.concept.animations.PropertyAnimationActivity">



    <Button android:id="@+id/property_playanimation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="play animation1" />

    <Button android:id="@+id/property_playanimation_button2"
        android:layout_toRightOf="@+id/property_playanimation_button"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="play animation2" />

    <Button android:id="@+id/property_playanimation_button3"
        android:layout_below="@+id/property_playanimation_button"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="play animation3" />

    <Button android:id="@+id/animation_processButton"
        android:layout_below="@+id/property_playanimation_button2"
        android:layout_toRightOf="@+id/property_playanimation_button3"
        android:layout_alignBaseline="@+id/property_playanimation_button3"
        android:textColor="#FF0000"
        android:background="#d3d3d3"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Process Animation" />

    <EditText android:id="@+id/processanimation_et"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/animation_processButton"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView android:id="@+id/property_animation_tv"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Text"
        android:textColor="#000000"
        />

    <ImageView android:id="@+id/animateImageView"
        android:layout_alignParentBottom="true"
        android:layout_width="72dp"
        android:layout_height="72dp"  />

</RelativeLayout>
