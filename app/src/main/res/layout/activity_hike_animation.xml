<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/hike_rootview"
    tools:context="com.rbricks.appsharing.concept.animations.HikeFaceFilterAnimationActivity">
    
    <Button android:id="@+id/hike_animationbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
            android:text="animation"
        />


    <Button
        android:id="@+id/hike_anim_btn1"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:text="button1"
        />

    <Button
        android:id="@+id/hike_anim_btn2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignBaseline="@+id/hike_anim_btn1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="button2"
        />

    <RelativeLayout
        android:id="@+id/hike_facefilter_parent"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_alignParentBottom="true"
        android:background="@color/blue"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="asdfssd"
            android:textColor="@color/red"
            android:textSize="14sp"
            />

    </RelativeLayout>


</RelativeLayout>
