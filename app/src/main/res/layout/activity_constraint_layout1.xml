<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="184dp"
        android:text="Button11"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintLeft_toRightOf="@+id/button12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:background="@color/transparent"
        android:text="Button12"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/button11"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="abcd"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintRight_toRightOf="@+id/button12"
        app:layout_constraintTop_toTopOf="@+id/button12"
        />

    <Button
        android:text="Button13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button13"
        app:layout_constraintLeft_toLeftOf="@+id/button12"
        android:layout_marginTop="80dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/button12"/>

    <Button
        android:text="Button14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button14"
        android:layout_marginLeft="20dp"
        app:layout_goneMarginLeft="180dp"
        app:layout_goneMarginTop="80dp"
        app:layout_constraintLeft_toRightOf="@+id/button13"
        app:layout_constraintTop_toBottomOf="@+id/button13"
        android:layout_marginStart="20dp"/>


</android.support.constraint.ConstraintLayout>